        <view>商品评价<text>9.8</text></view>
        <view>服务态度<text>9.8</text></view>
        <view>物流速度<text>9.8</text></view>
      </view>
    </view>
    <view class='gv-list5-btn'>
      <view>
        <navigator>查看分类</navigator>
        <navigator>进店逛逛</navigator>
      </view>
    </view>
  </view>
  <view class='goods-view-list6'>
    <navigator url='image_txt_view/image_txt_view' hover-class='none'>
      <image src='/image/shangjt.png'></image>
      <text>上拉查看图文详情</text>
    </navigator>
  </view>
</view>
<view class="bottom-nav">
  <navigator open-type="switchTab" url=''>
    <image src="/image/vf-icon1.png"></image>
    <text>客服</text>
  </navigator>
  <navigator>
    <image src='/image/vf-icon3.png'></image>
    <text>店铺</text>
  </navigator>
  <navigator url='' bindtap='guanzhu' class='{{Class}}'>
    <image src='{{imgurl}}'></image>
    <text>{{text}}</text>
  </navigator>
  <navigator class='active' bindtap='open'>
    <text>加入购物车</text>
  </navigator>
  <navigator class='active2' bindtap='open'>
    <text>立即购买</text>
  </navigator>
</view>
