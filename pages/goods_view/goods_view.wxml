        <image src='/image/pic1.png'></image>
      </view>
      <view class='gv-list4-icon'>
        <image src='/image/pinglun.png'></image>
        <text>0</text>
      </view>
    </view>
  </view>
  <view class='goods-view-list5'>
    <view class='goods-view-bt2'>
      <image src='/image/logo3.png' mode='widthFix'></image>
      <text>林氏家具旗舰店</text>
    </view>
    <view class='gv-list5-content'>
      <view class='gv-list5-list'>
        <text class='one'>60</text>
        <text class='two'>全部宝贝</text>
      </view>
      <view class='gv-list5-list'>
        <text class='one'>60</text>
        <text class='two'>关注人数</text>
      </view>
