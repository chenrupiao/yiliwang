/* pages/goods_view/image_txt_view/image_txt_view.wxss */
.container {align-items:stretch;}
.navbar{flex: none;display: flex;background: #fff;border-bottom:1px solid #f5f5f5;}  
.navbar .item{position: relative;line-height: 40px;font-size:30rpx;margin:0 auto;color: #333;width: 100%;text-align: center;}
.navbar .item.active{color: #cc0011;}  
.navbar .item.active:after{content: "";display: block;position: absolute;bottom: 0;left: 0;right: 0;height: 1px;background: #cc0011;} 

.tw-child{display: none;width: 100%;box-sizing: border-box;}
.tw-child.active{display: block;}

.tw-list1-top{width: 100%;margin-top: 20rpx;}
.tw-list1-top image{width: 100%;}
.tw-list1-bottom{width: 100%;margin-top: 20rpx;background: #fff;display: inline-block;margin-bottom: 100rpx;}
.tw-list1-bt{width: 100%;text-align: center;margin-bottom: 20rpx;display: inline-block;}
.tw-list1-bt text{width: 100%;display: block;height: 6rpx;background: #ffc229;margin-top: 8rpx;}
.tw-list1-bt view{font-size: 34rpx;color: #333;display: inline-block;margin: 0 auto;}
.tw-list1-pic{width: 100%;margin-top: 20rpx;}
.tw-list1-pic image{width: 100%;}

.bottom-nav{position:fixed;bottom:0;height:100rpx;width:100%; background:#fff;}
.bottom-nav::before{content: "";display: block;position: absolute;top: 0;left: 0;right: 0;height: 1px;background: #e6e6e6;  } 
.bottom-nav navigator{float:left;text-align:center;width:14%;padding:14rpx 0;margin:0 ;position:relative;height:100rpx;}
.bottom-nav navigator::after{content: "";display: block;position: absolute; height:100rpx; top: 0;right: 0;width:1px;  background: #e6e6e6;} 
.bottom-nav navigator.active3 text{color: #007aff;}
.bottom-nav navigator image{display:block; height:37rpx;width:38rpx;margin:0 auto;}
.bottom-nav navigator text{font-size:20rpx;color:#646464;line-height:1em;display:block;padding:10rpx 0 0}
.bottom-nav .active{background:#ef8200;height:100rpx;margin:0;width:29%;padding: 0;}
.bottom-nav .active::after{width: 0;}
.bottom-nav .active text{color: #fff;font-size: 30rpx;line-height:100rpx;text-align: center;padding:0;}
.bottom-nav .active2{background: #cc0011;height:100rpx;margin:0;width:29%;padding: 0;}
.bottom-nav .active2::after{width: 0;}
.bottom-nav .active2 text{color: #fff;font-size: 30rpx;line-height:100rpx;text-align: center;padding:0;}

.footer-dc{font-size: 0}
.footer-dc .active{display: none;}
.footer-dc .active2{display: block;}
.footer-dc .active3{transform: translate3d(0,0,0)!important;}
.footer-dc .black{position: fixed;top: 0;left: 0;width: 100%;height: 100%;background: rgba(0, 0, 0, 0.6);z-index: 6;}
.dc-content{background: #fff;position: fixed;bottom: 0;left: 0;width: 100%;z-index: 9; transition: All 0.4s ease; transform: translate3d(0,105%,0);}
.dc-content2{position: relative;}
.dc-content2 button.super{background: #cc0011;border-color:#ef8200;width: 100%;height: 88rpx;line-height: 88rpx;text-align: center;border-radius: 0;color: #fff;font-size: 32rpx;margin-top: 20rpx;}
.dc-bt{width: 100%;border-bottom: 1px solid #ccc;}
.bt-pic{border: 2px solid #e0e0e0;border-radius: 4px;width: 168rpx;height: 168rpx;position: absolute;top: -5%;left: 30rpx;}
.bt-pic image{width: 168rpx;height: 168rpx;}
.bt-txt{padding: 30rpx 0;padding-left: 236rpx;}
.bt-txt text{font-size: 32rpx;display: block;}
.bt-txt text:first-of-type{color: #999;}
.bt-txt text:nth-of-type(2){color: #ef8200;padding-top: 25rpx;}
.close{position: absolute;top: 30rpx;right: 30rpx;}
.close image{width: 36rpx;height: 36rpx;}
.dc-list1{margin-top: 20rpx;padding: 0 30rpx;box-sizing: border-box;display: inline-block;width: 100%;}
.dc-list1-bt{color: #999;font-size: 28rpx;line-height: 84rpx;}
.dc-list1-content navigator{margin: 0 10rpx 10rpx 0;padding: 10rpx 20rpx;font-size: 26rpx;border: 2px solid #bdbdbd;float: left;border-radius: 4px;color: #333;text-align: center;}
.dc-list1-btn button{float: left;height: 66rpx;text-align: center;line-height: 66rpx;font-size: 32rpx;width: 80rpx;color: #333;padding: 0}
.dc-list1-btn text{height: 66rpx;width: 80rpx;text-align: center;float: left;font-size: 32rpx;color: #333;line-height: 66rpx;} 

.tw-list2{width: 100%;box-sizing: border-box;padding: 0 24rpx;background: #fff;margin-top: 20rpx;margin-bottom: 100rpx;}
.tw-list2 view{width: 100%;height: 90rpx;line-height: 90rpx;border-bottom: 1px solid #e6e6e6;}
.tw-list2 view text:nth-of-type(2){font-size: 28rpx;color: #333;float: left;padding-left: 38rpx;}
.tw-list2 view text:first-of-type{font-size: 28rpx;color: #666;float: left;width: 180rpx;}

.tw-list3{width: 100%;background: #fff;margin-top: 20rpx;border-bottom: 1px solid #e6e6e6;display: inline-block;}
.tw-list3 view{width: 20%;float: left;padding: 20rpx 0;text-align: center;}
.tw-list3 view.red text{color: #cc0011}
.tw-list3 view text{font-size: 26rpx;color: #333;display: block;}
.tw-list3 view text:nth-of-type(2){padding-top: 10rpx;}

.tw-list4{width: 100%;background: #fff;padding: 0 24rpx;box-sizing: border-box;margin-bottom: 100rpx;}
.gv-list4-content{width: 100%;padding-bottom: 20rpx;border-bottom:1px solid #e6e6e6;display: inline-block;position: relative;}
.gv-list4-bt{width: 100%;height: 55rpx;line-height: 55rpx;padding: 20rpx 0;}
.gv-list4-bt image{width: 55rpx;height: 55rpx;border-radius: 50%;float: left;}
.gv-list4-bt text:first-of-type{font-size: 26rpx;color: #666;float: left;margin-left: 15rpx;}
.gv-list4-bt text:last-of-type{font-size: 26rpx;color: #999;float: right;}
.gv-list4-txt text{font-size: 28rpx;color: #333;padding-bottom: 20rpx;width: 100%;display: block;}
.gv-list4-pic image{width: 160rpx;height: 160rpx;border-radius: 4px;float: left;}
.gv-list4-icon{position: absolute;right: 0;bottom: 20rpx;}
.gv-list4-icon image{width: 30rpx;height: 26rpx;float: left;margin-left: 40rpx;}
.gv-list4-icon text{font-size: 24rpx;color: #666;line-height: 26rpx;float: left;margin-left: 10rpx;}
.gv-list4-icon text.red{color: #cc0011;}