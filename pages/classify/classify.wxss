/* pages/classify/classify.wxss */
page{font-size: 0;}
.container{width: 100%;display: inline-block;}
::-webkit-scrollbar{width: 0;height: 0;color: transparent;}
.classify-fl{float: left;width: 180rpx;}
.classify-fl navigator{width: 100%;text-align: center;line-height: 100rpx;height: 100rpx;position: relative;border: 1px solid #e6e6e6;background: #fff;}
.classify-fl navigator.active{border: none;background: #f2f2f2;}
.classify-fl navigator text{font-size: 26rpx;color: #333;}
.classify-fl navigator view{height: 100%;width: 6rpx;position: absolute;left: 0;top: 0;background: #cc0011;display: none;}
.classify-fl navigator.active view{display: block;}

.classify-fr{float: right;width: 520rpx;}
.classify-banner{width: 100%;margin-top: 20rpx;}
.classify-banner image{width: 100%;}
.classify-list{width: 100%;}
.classify-bt{width: 100%;height: 60rpx;line-height: 60rpx;margin-top: 20rpx;}
.classify-bt text{float: left;font-size: 28rpx;color: #333;}
.classify-bt image{float: left;width: 15rpx;height: 27rpx;margin-top: 18rpx;margin-left: 8rpx;}
.classify-list-content{width: 100%;display: inline-block;background: #fff;padding-bottom: 25rpx;}
.classify-list-content navigator{float: left;width: 140rpx;margin-left: 25rpx;margin-top: 25rpx;background: #fff;}
.classify-list-content navigator image{width: 140rpx;height: 140rpx;}
.classify-list-content navigator text{display: block;height: 40rpx;line-height: 40rpx;font-size: 24rpx;color: #666;width: 100%;text-align: center;}