/* pages/my2/business/ad_manage/ad_manage.wxss */
.container{margin-bottom: 100rpx;}
.ad-bt{width: 100%;box-sizing: border-box;padding: 0 24rpx;border-bottom: 1px solid #e6e6e6;background: #fff;}
.ad-bt text{line-height: 80rpx;color: #999;font-size: 28rpx;}
.ad-bt2{width: 100%;box-sizing: border-box;padding: 0 24rpx;border-bottom: 1px solid #e6e6e6;background: #fff;margin-top: 20rpx;}
.ad-bt2 text{line-height: 80rpx;color: #999;font-size: 28rpx;}

.ad-box{width: 100%;}
.ad-list{position: relative;padding: 20rpx 24rpx 20rpx 24rpx;border-bottom: 1rpx solid #e6e6e6;background: #fff;display: inline-block;width: 100%;box-sizing: border-box;}
.ad-list .ad-select{position: absolute;left: 24rpx;top: 50%;width: 45rpx;height: 45rpx;margin-top: -23rpx;}
.ad-list image{width:640rpx;height: 220rpx;float: right;}

.ad-footer{position: fixed;bottom: 0;left: 0;width: 100%;height: 100rpx;line-height: 100rpx;padding:0 100rpx 0 80rpx;box-sizing: border-box;background: #fff;color: #666;}
.ad-footer navigator{position: absolute;right: 0;top: 0;width: 240rpx;text-align: center;line-height: 100rpx;color: #fff;font-size: 32rpx;background: #cc0011;}
.ad-footer .ad-footer-txt{float: left;font-size: 32rpx;}
.total-select{position: absolute;left: 20rpx;top: 25rpx;width: 45rpx;height: 45rpx;}
.order-icon{position: absolute;right: 40rpx;top: 25rpx;width: 45rpx;height: 45rpx;}
.order-icon image,.order-icon navigator{display: block;width: 45rpx;height: 45rpx;}


.cart-no-data{padding:40rpx 0;color: #999;text-align: center;}