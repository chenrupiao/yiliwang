<!--pages/my2/business/goods_set_up/goods_address/goods_add_address/goods_add_address.wxml-->
<view class="container">
  <view class='add-address-content'>
    <view class='add-address-list'>
      <text>收货人</text>
      <input type='text' placeholder='请输入收货人姓名'></input>
    </view>
    <view class='add-address-list'>
      <text>联系方式</text>
      <input type='text' placeholder='请输入手机号码'></input>
    </view>
    <view class='add-address-list'>
      <text>邮政编码</text>
      <input type='text' placeholder='请输入邮政编码'></input>
    </view>
    <navigator class='add-address-list'>
      <text>所在地区</text>
      <image src='/image/pt-icon1.png'></image>
    </navigator>
    <view class='add-address-list'>
      <text>详细地址</text>
      <textarea placeholder='街道、楼牌号等'></textarea>
    </view>
  </view>
  <view class='add-address-btn'><button>保存</button></view>
</view>
