/* pages/my2/my2.wxss */
page{background: #f2f2f2;}
.container{font-size: 0;}
.my-top{width: 100%;position: relative;height: 400rpx;}
.my-header{width: 100%;padding: 20rpx 24rpx;box-sizing: border-box;position: relative;z-index: 1;display: inline-block;}
.my-header navigator image{width: 42rpx;height: 42rpx;}
.my-header navigator:first-of-type{float: left;}
.my-header navigator:last-of-type{float: right;}
.top-bg{position: absolute;width: 100%;z-index: 0}
.top-bg image{width: 750rpx;height: 400rpx;}
.top-mid{position: relative;z-index: 1;width: 100%;text-align: center;}
.top-mid-pic{width: 150rpx;height: 150rpx;border-radius: 50%;background: #b8b8b8;text-align: center;margin: 0 auto;margin-top: 15rpx;}
.top-mid-pic image{width: 140rpx;height: 140rpx;border-radius: 50%;margin-top: 5rpx;}
.top-mid-txt{position: relative;z-index: 1;text-align: center;width: 100%;display: inline-block;padding-top: 30rpx;}
.top-mid-txt navigator{font-size: 30rpx;color: #fff;display: inline-block;}
.top-mid-txt text{font-size: 30rpx;color: #fff;display: inline-block;}
.top-mid-btn{position: relative;z-index: 1;float: right;margin-top: -75rpx;margin-right: 24rpx;}
.top-mid-btn navigator{font-size: 24rpx;color: #fff;}

.my-list1{width: 100%;display: inline-block;background: #fff;margin-bottom: 20rpx;border-bottom: 1px solid #e6e6e6;border-top: 1px solid #e6e6e6;}
.my-list1 navigator{float: left;width: 20%;text-align: center;padding: 40rpx 0;box-sizing: border-box;}
.my-list1 navigator image{width: 40rpx;height: 40rpx;}
.my-list1 navigator text{font-size: 30rpx;color: #333;display: block;}
.my-list1 navigator text:last-of-type{padding-top: 20rpx;font-size: 22rpx;}
.my-list1 navigator:last-of-type{border-left: 1px solid #d9d9d9;}

.my-list2{width: 100%;display: inline-block;background: #fff;border-bottom: 1px solid #e6e6e6;border-top: 1px solid #e6e6e6;}
.my-list2 navigator{float: left;width: 25%;text-align: center;padding: 40rpx 0;box-sizing: border-box;}
.my-list2 navigator image{width: 50rpx;height: 50rpx;}
.my-list2 navigator text:last-of-type{padding-top: 15rpx;font-size: 22rpx;color: #333;display: block;}

.my-list3{width: 100%;display: inline-block;padding: 0 24rpx;box-sizing: border-box;}
.my-bt{text-align: center;width: 100%;line-height: 32rpx;height: 32rpx;padding-top: 45rpx;}
.my-bt view{padding: 0 20rpx;box-sizing: border-box;display: inline-block;margin: 0 auto;background: #f2f2f2;}
.my-bt view text{font-size: 30rpx;color: #333;line-height: 32rpx;height: 32rpx;float: left;}
.my-bt image{width: 32rpx;height: 32rpx;float: left;margin-right: 10rpx;}
.my-bt text.xian{width: 600rpx;height: 1px;background: #b3b3b3;display: block;margin: 0 auto;margin-top: -30rpx;}
.my-list3-content navigator{width: 340rpx;background: #fff;display: inline-block;margin-top: 20rpx;}
.my-list3-content navigator:nth-of-type(2n+1){float: left;}
.my-list3-content navigator:nth-of-type(2n+2){float: right;}
.my-list3-content navigator image{width: 340rpx;height: 340rpx;}
.my-list3-content navigator text{color: #333;font-size: 26rpx;line-height: 41rpx;display: block;width: 100%;box-sizing: border-box;padding: 0 10rpx;}
.my-list3-content navigator text:last-of-type{padding-bottom: 15rpx;}
.my-list3-content navigator text.red{color: #cc0011;font-size: 32rpx;}