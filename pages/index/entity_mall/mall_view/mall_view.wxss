/* pages/index/entity_mall/mall_view/mall_view.wxss */
.mall-top-txt{padding: 40rpx 24rpx;width: 100%;background: #fff;box-sizing: border-box}
.mall-logo{width: 170rpx;height: 70rpx;float: left;}
.mall-txt{float: left;margin-left: 30rpx;color: #333;font-size: 28rpx;}
.mall-top-txt navigator{width: 120rpx;height: 55rpx;line-height: 55rpx;background: #cc0011;border-radius: 3px;float: right;margin-right: 24rpx;}
.mall-top-txt navigator image{width: 28rpx;height: 26rpx;float: left;margin-top: 16rpx;margin-left: 15rpx;}
.mall-top-txt navigator text{color: #fff;font-size: 28rpx;float: left;margin-left: 8rpx;}

.mall-view{width: 100%;padding: 0 24rpx;box-sizing: border-box;background: #fff;margin-top: 20rpx;}
.mall-view navigator{width: 100%;padding: 28rpx 0;border-bottom: 1px solid #e6e6e6;display: inline-block;}
.mall-view navigator text:first-of-type{color: #333;font-size: 28rpx;font-weight: bold;width: 130rpx;float: left;line-height: 42rpx;}
.mall-view navigator text:nth-of-type(2){color: #666;font-size: 28rpx;float: left;line-height: 42rpx;}
.mall-view navigator image{float: right;width: 38rpx;height: 38rpx;}
