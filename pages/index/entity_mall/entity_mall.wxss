/* pages/index/entity_mall/entity_mall.wxss */
.mall-top{width: 100%;position: relative;}
.entity-banner{width: 100%;}
.black{position: absolute;top: 0;left: 0;width: 100%;height: 100%;background: rgba(0, 0, 0, 0.4);z-index: 1}
.mall-top-txt{position: absolute;bottom: 20rpx;left: 0;width: 100%;z-index: 2;}
.mall-logo{width: 170rpx;height: 70rpx;float: left;}
.mall-txt{float: left;margin-left: 30rpx;color: #fff;font-size: 28rpx;}
.mall-top-txt navigator{width: 120rpx;height: 55rpx;line-height: 55rpx;background: #cc0011;border-radius: 3px;float: right;margin-right: 24rpx;}
.mall-top-txt navigator image{width: 28rpx;height: 26rpx;float: left;margin-top: 16rpx;margin-left: 15rpx;}
.mall-top-txt navigator text{color: #fff;font-size: 28rpx;float: left;margin-left: 8rpx;}

.mall-nav{width: 100%;background: #fff;border-bottom: 1px solid #e6e6e6;}
.mall-nav navigator{width: 190rpx;height: 115rpx;text-align: center;float: left;box-sizing: border-box;padding-bottom: 10rpx;}
.mall-nav navigator image{margin-bottom: 10rpx;margin-top: 35rpx;width: 36rpx;height: 32rpx;}
.mall-nav navigator text{display: block;color: #333;}
.mall-nav navigator .first{font-size: 28rpx;padding-top: 32rpx;padding-bottom: 5rpx;}
.mall-nav navigator .last{font-size: 22rpx;}
.mall-nav navigator.active{border-bottom: 1px solid #cc0011;}
.mall-nav navigator.active .first{color: #cc0011;}
.mall-nav navigator.active .last{color: #cc0011;}

.mall-content{width: 100%;background: #fff;padding: 20rpx 0;margin-top: 20rpx;}
.mall-list{width: 210rpx;height: 92rpx;margin-left: 24rpx;text-align: center;display: inline-block;border: 1px solid #ccc;}
.mall-list:last-of-type{margin-right: 24rpx;}
.mall-list text{display: block;color: #47b0da}
.mall-list text:first-of-type{font-size: 22rpx;padding-top: 18rpx;}
.mall-list text:last-of-type{font-size: 28rpx;padding-top: 5rpx;}

.mall-content2{width: 100%;background: #fff;padding: 20rpx 24rpx;margin-top: 20rpx;box-sizing: border-box;}
.page-body{width:100%;}
swiper{width:100%;}
.slide-image{width:100%;height: 300rpx;}

.mall-content3{width: 100%;margin-top: 20rpx;background: #fff;}
.mall-pic{width: 100%;padding: 0 24rpx;box-sizing: border-box;}
.mall-pic image{width: 100%;margin: 20rpx 0;}
.mall-bt{width: 100%;background: #fff;font-size: 26rpx;color: #333;border-bottom: 1px solid #e6e6e6;height: 60rpx;line-height: 60rpx;}
.mall-bt text{float: left;height: 40rpx;width: 6rpx;background: #cc0011;margin-top: 10rpx;margin-right: 18rpx;}

.mall-content4{width: 100%;margin-top: 20rpx;border-bottom: 1px solid #e6e6e6;border-top: 1px solid #e6e6e6;margin-bottom: 110rpx;}
.mall-content4 navigator{width: 100%;padding: 0 24rpx;box-sizing: border-box;background: #fff;height: 90rpx;line-height: 90rpx;font-size: 30rpx;color: #333;}
.mall-content4 navigator image{float: right;width: 15rpx;height: 27rpx;margin-top: 31rpx;}

.mall-btn{width: 100%;position: fixed;bottom: 0;left: 0;height: 90rpx;border: 1px solid #e6e6e6;box-sizing: border-box;background: #fff;}
.mall-btn navigator{width: 33.3%;text-align: center;font-size: 30rpx;color: #333;line-height: 90rpx;border-right: 1px solid #e6e6e6;box-sizing: border-box;float: left;}
.mall-btn navigator:last-of-type{border: none;}
.mall-btn navigator:nth-of-type(2) image{width: 30rpx;height: 27rpx;margin-right: 10rpx;}
.mall-btn navigator:nth-of-type(3) image{width: 30rpx;height: 27rpx;}

.mall-nav2{width: 250rpx;position: fixed;bottom: 95rpx;left: 50%;margin-left: -125rpx;background: #fff;padding: 0 25rpx;box-sizing: border-box;border-radius: 8px;border: 1px solid #e6e6e6;display: none;}
.mall-nav2.active{display: block;}
.mall-nav2 navigator{width: 100%;height: 90rpx;line-height: 90rpx;font-size: 30rpx;color: #333;border-bottom: 1px solid #e6e6e6;text-align: center;}
.mall-nav2 navigator:last-of-type{border: none;}